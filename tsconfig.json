{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "lib": ["ES2015", "DOM"],
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["css-modules"]
  },
  "include": ["src/**/*"]
}
